<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/grade"
    android:layout_height="match_parent"
    tools:context="com.example.android.loginusingsqlite.MainActivity">



    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:id="@+id/logo"
        android:layout_above="@id/usernameLogin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:layout_marginBottom="@dimen/logo_margin_bottom"
        android:src="@drawable/logo1"
        android:contentDescription="@string/logo" />

    <EditText
        android:id="@+id/usernameLogin"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/userName_layout_margin"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/userName_layout_MarginTop"
        android:padding="@dimen/userName_padding"
        android:background="@drawable/rounded"
        android:hint="@string/please_enter_username">

    </EditText>

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameLogin"
        android:background="@drawable/rounded"
        android:layout_margin="@dimen/password_layout_margin"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/password_layout_marginTop"
        android:padding="@dimen/password_padding"
        android:hint="@string/please_enter_password">

    </EditText>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_details"
        android:textSize="@dimen/newUser_SignUp_textSize"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordLogin"
        android:textColor="#afefef"
        android:text="@string/new_user"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_now"
        android:id="@+id/sign_up_link"
        android:textSize="@dimen/newUser_SignUp_textSize"
        android:onClick="sign_up_page"
        android:layout_below="@id/sign_up_details"
        android:layout_centerHorizontal="true"
        android:textColor="#afefef"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:id="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/floatingActionButton_layoutMargin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
